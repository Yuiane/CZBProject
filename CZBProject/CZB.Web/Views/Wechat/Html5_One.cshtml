
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>88父亲节</title>
    <link href="~/Scripts/Swiper-3.4.2/swiper.min.css" rel="stylesheet" />
    <link href="~/Scripts/Swiper-3.4.2/animate.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/Swiper-3.4.2/swiper.min.js"></script>
    <script src="~/Scripts/Swiper-3.4.2/swiper.animate1.0.2.min.js"></script>
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
        }

        body {
            font-family: "microsoft yahei";
        }

        .swiper-container {
            width: 100%;
            height: 100%;
        }

        .swiper-slide-one {
            background-image: url(/Images/01bg.jpg);
            background-size: 100%;
            background-repeat: no-repeat;
            position: relative;
        }

            .swiper-slide-one bottom {
                position: absolute;
                bottom: 0;
            }

                .swiper-slide-one bottom img {
                    width: 100%;
                }

            .swiper-slide-one content {
                position: absolute;
                top: 0;
            }

                .swiper-slide-one content img {
                    padding-top: 5px;
                    float: left;
                    width: 80%;
                }

                    .swiper-slide-one content img:first-child {
                        padding-top: 0;
                        float: right;
                        width: 60%;
                    }
    </style>
</head>
<body>
    <div class="swiper-container swiper-container-vertical">
        <div class="swiper-wrapper">
            <section class="swiper-slide swiper-slide-one">
                <content>
                    <img class="ani" swiper-animate-duration="1.5s" swiper-animate-delay="0.8s" swiper-animate-effect="bounceInRight" src="~/Images/01word.png" />
                    <img class="ani" swiper-animate-duration="1s" swiper-animate-delay="2s" swiper-animate-effect="rollIn" src="~/Images/02word.png" />
                </content>
                <bottom class="ani" swiper-animate-duration="1s" swiper-animate-delay="0s" swiper-animate-effect="bounceInUp">
                    <img src="~/Images/01bottom.png" />
                </bottom>
            </section>
            <section class="swiper-slide swiper-slide-one">
                <content>
                    <img class="ani" swiper-animate-duration="1.5s" swiper-animate-delay="0.8s" swiper-animate-effect="bounceInRight" src="~/Images/01word.png" />
                    <img class="ani" swiper-animate-duration="1s" swiper-animate-delay="2s" swiper-animate-effect="rollIn" src="~/Images/02word.png" />
                </content>
                <bottom class="ani" swiper-animate-duration="1s" swiper-animate-delay="0s" swiper-animate-effect="bounceInUp">
                    <img src="~/Images/01bottom.png" />
                </bottom>
            </section>
        </div>
    </div>
</body>
</html>
<script type="text/javascript">
    $(function () {
        var mySwiper = new Swiper('.swiper-container',
            {
                direction: 'vertical',
                onInit: function (swiper) { //Swiper2.x的初始化是onFirstInit
                    swiperAnimateCache(swiper); //隐藏动画元素
                    swiperAnimate(swiper); //初始化完成开始动画
                },
                onSlideChangeEnd: function (swiper) {
                    swiperAnimate(swiper); //每个slide切换结束时也运行当前slide动画
                }
            })
    })
</script>
